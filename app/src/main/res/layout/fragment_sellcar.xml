<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#0012BD"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/arrow_back22"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_back"
            android:tint="@android:color/white"
            android:contentDescription="Back Arrow" />

        <TextView
            android:id="@+id/textNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Sell Your Car"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Scrollable Form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:background="@drawable/button_border"
                android:src="@drawable/img4"
                android:layout_marginBottom="16dp" />

            <!-- Spinner Labels + Fields -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Car Type" android:textColor="#000000" android:textSize="16sp" android:layout_marginTop="12dp"/>
            <Spinner android:id="@+id/carType" style="@style/CustomSpinner" android:layout_marginBottom="8dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Car Brand" android:textColor="#000000" android:textSize="16sp" android:layout_marginTop="12dp"/>
            <Spinner android:id="@+id/carModel" style="@style/CustomSpinner" android:layout_marginBottom="8dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="City" android:textColor="#000000" android:textSize="16sp" android:layout_marginTop="12dp"/>
            <Spinner android:id="@+id/city" style="@style/CustomSpinner" android:layout_marginBottom="8dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Model Year" android:textColor="#000000" android:textSize="16sp" android:layout_marginTop="12dp"/>
            <Spinner android:id="@+id/model" style="@style/CustomSpinner" android:layout_marginBottom="8dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Registered" android:textColor="#000000" android:textSize="16sp" android:layout_marginTop="12dp"/>
            <Spinner android:id="@+id/registered" style="@style/CustomSpinner" android:layout_marginBottom="8dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Color" android:textColor="#000000" android:textSize="16sp" android:layout_marginTop="12dp"/>
            <Spinner android:id="@+id/color" style="@style/CustomSpinner" android:layout_marginBottom="8dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fuel Type" android:textColor="#000000" android:textSize="16sp" android:layout_marginTop="12dp"/>
            <Spinner android:id="@+id/fuelType" style="@style/CustomSpinner" android:layout_marginBottom="8dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Body Type" android:textColor="#000000" android:textSize="16sp" android:layout_marginTop="12dp"/>
            <Spinner android:id="@+id/bodyType" style="@style/CustomSpinner" android:layout_marginBottom="8dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Transmission Type" android:textColor="#000000" android:textSize="16sp" android:layout_marginTop="12dp"/>
            <Spinner android:id="@+id/transmissionType" style="@style/CustomSpinner" android:layout_marginBottom="16dp"/>

            <!-- EditText Fields with labels -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Engine Capacity (CC)"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/EngineCapacity"
                style="@style/CustomEditText"
                android:hint="Specify Engine Capacity" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KMs Driven"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/km"
                style="@style/CustomEditText"
                android:hint="Specify KMs Driven" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price (PKR)"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/price"
                style="@style/CustomEditText"
                android:hint="Set a price" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/desc"
                style="@style/CustomEditText"
                android:hint="e.g. Alloy rims, First Owner" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/Address"
                style="@style/CustomEditText"
                android:hint="Enter your current address" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="80dp"
                android:text="Post Ad"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:backgroundTint="#0012BD" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
