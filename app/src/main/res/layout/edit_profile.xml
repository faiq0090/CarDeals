<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top App Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0012BD"
            android:paddingVertical="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/arrow_back22"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/arrow_back"
                android:tint="@android:color/white" />

            <TextView
                android:id="@+id/textNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Your Profile"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Content Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="8dp">

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Email"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_edittext"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:hint="bbm@gmail.com"
                android:padding="12dp"
                android:layout_marginTop="20dp"
                android:textColorHint="#ACACAC" />

            <!-- Phone -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Phone Number"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="24dp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_edittext"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="10dp"
                android:hint="+923162223931"
                android:inputType="phone"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:textColorHint="#ACACAC" />

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Full Name"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="24dp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Muhammad Bin Basit Masood"
                android:padding="12dp"
                android:layout_marginTop="20dp"
                android:textColorHint="#ACACAC" />

            <!-- Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Password"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="24dp" />

            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_edittext"
                android:drawableStart="@drawable/ic_lock"
                android:drawableEnd="@drawable/ic_eye"
                android:drawablePadding="10dp"
                android:hint="********"
                android:padding="12dp"
                android:inputType="textPassword"
                android:layout_marginTop="20dp"
                android:textColorHint="#ACACAC" />

            <!-- Save Button -->
            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="#0012BD"
                android:text="Save Changes"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
