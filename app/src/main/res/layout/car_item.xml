<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <RelativeLayout
        android:id="@+id/CarResult"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:background="#F5F0E5"
        android:clickable="true"
        android:layout_width="350dp"
        android:layout_height="160dp">

        <RelativeLayout
            android:id="@+id/imgcontainer"
            android:layout_centerVertical="true"
            android:layout_width="150dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/Carimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/info1"
            android:layout_toRightOf="@id/imgcontainer"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="#D9D9D9"
            android:layout_width="190dp"
            android:layout_height="140dp">

            <TextView
                android:id="@+id/CarName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:text="Honda Civic 1.8 i-VTEC CVT"
                android:textColor="@color/black"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/Price"
                android:layout_below="@id/CarName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:text="PKR 42.75 lacs"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:id="@+id/infoup2"
                android:layout_below="@id/Price"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/CalendarIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="05dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="CalendarIcon"
                    android:src="@drawable/calendar_symbol_svgrepo_com" />
                <TextView
                    android:id="@+id/modelYeartext"
                    android:layout_toRightOf="@id/CalendarIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:text="2017"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    />
                <ImageView
                    android:id="@+id/MileageIcon"
                    android:layout_toRightOf="@id/modelYeartext"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="MileageIcon"
                    android:src="@drawable/mileage" />

                <TextView
                    android:id="@+id/mileagetext"
                    android:layout_toRightOf="@id/MileageIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="2dp"
                    android:text="110,000km"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/infoup2"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/FuelIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="05dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="FuelIcon"
                    android:src="@drawable/gas_station_icon" />
                <TextView
                    android:id="@+id/FuelTypetext"
                    android:layout_toRightOf="@id/FuelIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:text="Petrol"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    />
                <ImageView
                    android:id="@+id/LocationIcon2"
                    android:layout_toRightOf="@id/FuelTypetext"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="LocationIcon"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/locationtext"
                    android:layout_toRightOf="@id/LocationIcon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="2dp"
                    android:text="Lahore"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>