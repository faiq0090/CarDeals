<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#0012BD"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/arrow_back12"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:contentDescription="Back Arrow"
                android:src="@drawable/arrow_back" />

            <SearchView
                android:id="@+id/searchview1"
                android:layout_marginLeft="50dp"
                android:layout_width="195dp"
                android:queryHint="Search Cars"
                android:layout_height="wrap_content"
                android:background="@color/white"
                />
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:background="@color/white"
                android:layout_toRightOf="@+id/searchview1"
                android:orientation="horizontal">

                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:background="#000000" />
                <ImageView
                    android:id="@+id/LocationIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="05dp"
                    android:layout_marginTop="11dp"
                    android:contentDescription="Location Icon"
                    android:src="@drawable/location" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="15dp"
                    android:clickable="true"
                    android:text="All Cities"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="Sort"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/SortIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/text3"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="SortIcon"
            android:src="@drawable/sort" />


        <TextView
            android:id="@+id/text4"
            android:layout_toRightOf="@id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="0dp"
            android:text=" Filter"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/FilterIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/text4"
            android:layout_marginStart="05dp"
            android:layout_marginTop="0dp"
            android:contentDescription="FilterIcon"
            android:src="@drawable/filter_6551" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000" />
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="12"
            android:textColor="@color/black"
            android:textSize="18dp"
             />

        <TextView
            android:id="@+id/text5"
            android:layout_toRightOf="@id/numtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:text="results for: "
            android:textColor="@color/black"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/Searchtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/text5"
            android:text="civic"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>