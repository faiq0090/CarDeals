<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NumericButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">#6BADE3</item>
    </style>
    <style name="BottomNavigationView.InactiveText" parent="TextAppearance.AppCompat.Small">
        <item name="android:background">#0012BD</item>
        <!-- Customize action bar item text and icon colors -->
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="CustomEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>